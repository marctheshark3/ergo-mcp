# Ergo Explorer API settings
ERGO_EXPLORER_API=https://api.ergoplatform.com/api/v1

# Ergo Node API settings
# The URL to your Ergo node
ERGO_NODE_API=http://localhost:9053
# Your Ergo node API key (Replace with your actual key)
ERGO_NODE_API_KEY=your_ergo_node_api_key

# ErgoWatch API settings
ERGOWATCH_API_URL=https://api.ergo.watch

# Ergo Explorer MCP Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=3033
# Optional: Port for a second Ergo Explorer MCP server instance (if needed)
# ERGO_EXPLORER_SECONDARY_PORT=3133
# Path to the Ergo Explorer MCP directory (Adjust if necessary)
MCP_PATH=/path/to/ergo-explorer-mcp

# MCPO Service settings
MCPO_PORT=3003
# Your MCPO API key for authentication (Replace with your actual key)
MCPO_API_KEY=your_mcpo_api_key

# General settings
NETWORK=mainnet 